<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape>
            <stroke
                android:width="3dp"
                android:color="?colorPrimary"/>
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="?attr/colorPrimaryDark"/>
        </shape>
    </item>
</selector>